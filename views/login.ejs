<!DOCTYPE html>
<html lang="en" class="has-background-primary-light">
  <head>
    <title>Sign in | Ciao!</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover">
  </head>
  <body class="has-text-light is-family-monospace container">
    <%- include('header'); -%>
    <section class="section container">
    <% if (hasMessages) { %>
      <div class="message is-danger">
        <div class="message-header">Error</div>
        <div class="message-body">
          <ul>
            <% messages.forEach((message) => { %>
              <li><%= message %></li>
            <% }); %>
          </ul>
        </div>
      </div>
    <% } %>
      <nav class="panel is-primary">
        <p class="panel-heading">Sign in</p>
        <form action="/login/password" method="post" class="panel-block columns">
          <div class="field column">
            <label class="label">Email</label>
            <input class="input control is-primary" type="text" name="username" placeholder="Email">
          </div>
          <div class="field column">
            <label class="label">Password</label>
            <input class="input control is-primary" type="password" name="password" placeholder="Password">
          </div>
          <div class="column">
            <button type="submit" class="button is-primary">Sign in</button>
          </div>
        </form>
      </nav>
    </section>
  </body>
</html>
